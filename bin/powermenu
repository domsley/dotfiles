#!/bin/bash

# Menu options
options="Shutdown\nRestart\nLogout"

# Rofi command (style can be customized later)
chosen=$(echo -e "$options" | rofi -dmenu -p "Power Menu" -theme-str '
    window {width: 330px; }
    listview {lines: 3; }
')

case "$chosen" in
    *Shutdown)
        systemctl poweroff
        ;;
    *Restart)
        systemctl reboot
        ;;
    *Logout)
        hyprctl dispatch exit
        ;;
esac
