# ---------- Global defaults ----------
# Sizing & layout
width=440
height=220
margin=10,11,10,10
padding=15
border-size=2
border-radius=6
max-visible=3
# top-left | top-right | bottom-left | bottom-right
anchor=top-right
# leave this unset for all monitors; set e.g. output=DP-1
# output=DP-1

# Colors (ARGB hex). Example: semi-transparent background.
background-color=#dcdadc
text-color=#333333
border-color=#dcdadc
# progress can be a plain color or "over <color>" to overlay the bg
progress-color=over #89b4faff

# Fonts (Pango description: name then size)
font=SF Pro Display 12

# Behavior
default-timeout=5000
ignore-timeout=0
# Newest first: use "-time" (old "ascending/descending" doesn’t parse)
sort=-time
# collapse similar notifs
group-by=summary,app-name
max-history=100
# enable history so you can recall dismissed notifications
history=1
# allow pango markup from apps
markup=1
icons=1
max-icon-size=90
# show action buttons if app provides them
actions=1
# title line uses app name, then summary; body on new line
format=<b>%a</b> — <b>%s</b>\n%b

